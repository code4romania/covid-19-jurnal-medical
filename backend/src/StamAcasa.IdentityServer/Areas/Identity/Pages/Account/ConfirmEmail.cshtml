@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmare email";
}

<div class="login-page">

    <div class="login-form-wrapper">
        <img src="~/stamacasa.svg" alt="logo" role="logo">
        <div class="container __login-form-container">
            <h1 class="subtitle is-size-2">Confirmare adresă e-mail</h1>
            <div>@Model.StatusMessage</div>
        </div>
    </div>
</div>
@if(Model.Success) { 
    <script>
        setTimeout(function () {window.location = '@(Model.RedirectUrl)'}, 5000);
    </script>
}
