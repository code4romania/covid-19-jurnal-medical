{
  "ConnectionStrings": {
    "UserDBConnection": "Data Source=UserInfo.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672
  },
  "ScheduledJobs": { // Cron format details: https://github.com/HangfireIO/Cronos#cron-format
    // Test job that runs every 2 minutes.
    "StamAcasa.JobScheduler.Jobs.TestJob": "*/2 * * * *",

    // Job that sends assessment reminders and runs daily at 09:00 and 18:00.
    "StamAcasa.JobScheduler.Jobs.SendAssessmentReminderJob": "0 9,18 * * *",

    // Job that sends result notifications and runs daily at 07:00.
    "StamAcasa.JobScheduler.Jobs.SendResultsNotificationJob": "0 7 * * *"
  }
}
